<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerA"
        android:layout_width="@dimen/dialog_size"
        android:layout_height="@dimen/dialog_size"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerB"
        android:layout_width="@dimen/dialog_size"
        android:layout_height="@dimen/dialog_size"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerC"
        android:layout_width="@dimen/dialog_size"
        android:layout_height="@dimen/dialog_size"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerD"
        android:layout_width="@dimen/dialog_size"
        android:layout_height="@dimen/dialog_size"
        android:layout_gravity="center" />

</FrameLayout>